@model IEnumerable<E__Market.Models.Product>


@{
    ViewBag.Title = "ProductPage";
}



<style>
    .thumbnail:hover {
        box-shadow: 0 5px 10px rgba(0,0,0,0.5);
        transform: scale(0.95);
        transition: 0.5s;
    }

    h1 {
        text-align: center;
        font-size: x-large;
        font-weight: 500;
        font-stretch: extra-expanded
    }

    .BOX {
        height: 200PX
    }
</style>

<br />
<br />

<h2 style="color: #3498db; font-weight: lighter; border-bottom: 4px solid #3498db; text-transform: uppercase; font-size: 20px; font-weight: bold; text-align: center; ">our Categories</h2>
<br />
<div class="row">

    @using (Html.BeginForm())
    {
        <p>

            Filter: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>


    }


    @foreach (var item in Model)
    {
        <div class="box">
            <div class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@Url.Content(item.image)" alt="..." width="171" height="180">
                </a>
                <div class="caption" style="text-align:center">
                    <h2>
                        @item.name
                    </h2>


                    <p><a href="#" class="btn btn-primary" role="button">More Info</a> </p>

                </div>

            </div>
        </div>


    }

</div>